    <div id="layoutSidenav_content">
      <main class="main-content">
        <br>
        <h2 style="text-align: center;"> Attendance Form</h2>
      
        <form class="form-style-9" action="/sub" method="POST">    

            <ul>
                <li>
                 Leacturer ID: <input type="text" name="username" class="field-style field-split align-right" placeholder="Enter TeacherID" />
                
                </li>
            <li>
                Student ID:  <input type="text" name="stu" class="field-style field-split align-right" placeholder="Enter studentid" />
            </li>
            <li>
             Year of study:<select class="field-style field-split align-right" name="year" >
                    <option value="first">First year</option>
                    <option value="second">Second year</option>
                    <option value="third">Third year</option>
                </select>
            </li>
            <li>
                Date:  <input type="date" name="date" id="date" class="field-style field-split align-right" placeholder="Enter date" />
            </li>
            <li>
               AttendanceStatus:<select class="field-style field-split align-right" name="status1" required  >
                <option value="Present">Present</option>
                <option value="Absent">Absent</option>
            </select>
            </li>
            <br>
        
            <li>
           <center><button type="submit" >Submit</button></center>
            </li>
            </ul>
        </form>  
            
      </main>
